rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /suggestions/{document=**} {
    	allow read;
      allow read, create, update: if
          request.auth != null;
    }
    match /users/{document=**} {
    	allow read;
      allow read, create, update: if
          request.auth.uid == resource.data.id;
    }
  }
}